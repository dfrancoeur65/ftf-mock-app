<div class="container">

        <h1>Deals</h1>

        <div>
          <h3>Loans Funded current year: <%= number_to_currency(@loans_funded) %></h3>
        </div>
        <div class = "table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Borrower</th>
            
                <th>Deal Title</th>
                <th>Loan Amount</th>
                <th>
                  Funding Channel
                </th>
              </tr>
            </thead>

            <tbody>
              <% @deals.each do |deal| %>
              <tr class= "<%= 'table-info' if deal.loan.funding_channel == 'sale' %>">
                <td><%= deal.user.name %></td>
                <td><%= deal.street %></td>
                <td><%= number_to_currency(deal.loan.contract_amount) %></td>
                <td><%= deal.loan.funding_channel %></td>
              </tr>
              <% end %>
            </tbody>
          </table>

        </div>

        <br>
      </div>
